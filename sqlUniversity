create database university;
use university;
create table student(std_id int,std_name char(20),dept varchar(20));
insert into student values(01,'abhi','mca');
insert into student values(02,'manu','mtech');
insert into student values(03,'jothish','bca');
select * from student;
create table teachers(id int,name char(20), dept_name varchar(20),course_id varchar(20),semester varchar(8));
insert into teachers values(01,'anu','eee','e-101','2');
insert into teachers values(02,'manju','cs','cs-204','4');
select * from teachers;
select * from student where dept='bca';
select * from teachers where semester='4' and dept_name='cs';
alter table teachers add age int;
select * from teachers;
alter table teachers drop column age;
select * from teachers;
alter table student rename column dept to branch;
select * from student;
show tables;
show columns from teachers;
show tables;
